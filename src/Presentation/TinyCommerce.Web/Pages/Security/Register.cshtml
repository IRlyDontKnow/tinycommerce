@page "/register"
@model TinyCommerce.Web.Pages.Security.Register

<div class="box">
    <form method="post">
        <div class="field">
            <label class="label">First name</label>
            <div class="control">
                <input class="input" type="text" asp-for="FormData.FirstName">
            </div>
            <span class="help is-danger" asp-validation-for="FormData.FirstName"></span>
        </div>
        <div class="field">
            <label class="label">Last name</label>
            <div class="control">
                <input class="input" type="text" asp-for="FormData.LastName">
            </div>
            <span class="help is-danger" asp-validation-for="FormData.LastName"></span>
        </div>
        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" type="email" asp-for="FormData.Email">
            </div>
            <span class="help is-danger" asp-validation-for="FormData.Email"></span>
        </div>
        <div class="field">
            <label class="label">Password</label>
            <div class="control">
                <input class="input" type="password" asp-for="FormData.Password">
            </div>
            <span class="help is-danger" asp-validation-for="FormData.Password"></span>
        </div>
        <div class="field">
            <label class="label">Confirm password</label>
            <div class="control">
                <input class="input" type="password" asp-for="FormData.PasswordConfirmation">
            </div>
            <span class="help is-danger" asp-validation-for="FormData.PasswordConfirmation"></span>
        </div>
        <div class="field">
            <div class="control">
                <button class="button is-link" type="submit">Register</button>
            </div>
        </div>
    </form>
</div>