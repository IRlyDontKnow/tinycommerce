@page "/admin/catalog/brands/create"
@model TinyCommerce.Web.Areas.Admin.Pages.Catalog.Brands.Create
@{
    ViewData["PageTitle"] = "Create brand";
}

<div class="box">
    <form method="post">
        <div class="field">
            <label class="label">Name</label>
            <div class="control">
                <input class="input" type="text" asp-for="FormData.Name">
            </div>
            <span class="help is-danger" asp-validation-for="FormData.Name"></span>
        </div>
        <div class="field">
            <label class="label">Slug</label>
            <div class="control">
                <input class="input" type="text" asp-for="FormData.Slug">
            </div>
            <span class="help is-danger" asp-validation-for="FormData.Slug"></span>
        </div>
        <div class="field">
            <label class="label">Description</label>
            <div class="control">
                <textarea class="textarea" rows="4" asp-for="FormData.Description"></textarea>
            </div>
            <span class="help is-danger" asp-validation-for="FormData.Description"></span>
        </div>
        <div class="field">
            <div class="control">
                <button class="button is-link" type="submit">Create brand</button>
            </div>
        </div>
    </form>
</div>